
<h3> SMS Creation</h3>


<%= form_for Sm.new,:url => send_sms_path,:method => "post", :html => { :class => "form-horizontal" } do |f| %>
   
   	<div class="row">
   	  <div class="col-md-8 form-group" style="margin: 20px 0px 15px 50px;">
    	<%= f.label :grade, :class => "col-md-3 control-label", :style => "font-weight: bold;"%>
   		<%=  f.select :id, options_for_select(@grades.collect {|c| [c.grade_name, c.id]}), { :include_blank => true},{:class => "col-md-6 form-control"}%>
  	  </div>
  	</div>
  
    <div class="row">
    	<div class="col-md-8 form-group" style="margin: 20px 0px 15px 50px;">
  		<%= f.label :sms_content,:class =>"col-md-3 control-label", :style => "font-weight: bold; " %>
  		<%= f.text_area :sms_content, :class => 'col-md-6  form-control' %>
  		</div>
	</div>
   
	
 <div class="row">
 	<div class="col-md-12 text-center">
 		<%= f.submit :class => "btn btn-success",:value => "Assign Classes" %></div>
 	</div>
 </div> 
 
<%end%>
  
