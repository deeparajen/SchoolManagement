   <div class="modal-dialog"  style: "padding-top: 10px;">
    <div class="modal-content">
      <div class="modal-header">
      	 <h3 class="modal-title"></h3>
      	 
        <button type="button" class="close" 
                data-dismiss="modal" 
                aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
        
     
       
      </div>
      
      <%= form_for @grade, remote: true, :html => { :role => "form" } do |f| %>
      <div class="modal-body">
      	
 	    <div id="error_explanation" class="bg-danger text-danger">
	    </div>
	    
      	<div class="row">
      	<div class="col-sm-3">
        	<%= f.label :grade_name, :class => "control-label text-nowrap lbl"%></div>
        <div class="col-sm-7 pull-left">
          <%= f.text_field :grade_name, class: 'form-control grade_name', "aria-describedby" => "gradeHelpInline"%>
          <small id="gradeHelpInline" class="form-text text-muted">
      			(For example: IA, IB, IIA...)
    	  </small>
        </div>
       
       </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal",aria-hidden="true", style = "padding: 3px 6px; font-size: 14px;">Cancel</button>
        <%= f.submit class: 'btn btn-primary', :style=> "padding: 3px 6px; font-size: 14px;"%>
      </div>
      <% end %>
	</div>
	</div>

<style>
.lbl {
	font-weight: bold;
	padding: 10px 0px 0px 12px;
}
</style>
